<Window x:Class="B3View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" WindowStartupLocation="CenterScreen"
        MinWidth="800" MinHeight="600"
        Width="800" Height="600"
        AllowsTransparency="False" SnapsToDevicePixels="True" Background="#FF111111" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid
            Name="cnvTitle"
            Background="Transparent"
            HorizontalAlignment="Left"
            Height="32"
            VerticalAlignment="Top"
            Width="800"
            MouseMove="cnvTitle_MouseMove"/>
        <Canvas
            Name="cnvLogo"
            HorizontalAlignment="Right"
            Height="100" Width="800"
            VerticalAlignment="Top"
            Margin="0,32,0,0">
            <Label
                Content="beats"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="100"
                Width="248"
                FontFamily="/B3View;component/Fonts/#abeatbyKai"
                Foreground="#FFA90000"
                FontSize="80"
                Canvas.Left="187" />
            <Label
                Content="by bauk"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Foreground="#FF919195"
                FontSize="80"
                FontFamily="/B3View;component/Fonts/#abeatbyKai"
                Height="100"
                Canvas.Left="440"
                Width="360"/>
        </Canvas>
        
        <Canvas HorizontalAlignment="Left" Height="206" Margin="26,181,0,0" VerticalAlignment="Top" Width="567">
        </Canvas>
    </Grid>
</Window>
